<div class="container">
	<div class="row">
		<h2>Create a chat room</h2>
	</div>
	<div class="row">
		<%= form_for @room do |f| %>
		  <div class="form-group">
		    <%= f.label :name %>
		    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
		  </div>

		  <%= f.submit "Create", class: 'btn waves-effect waves-light' %>
		  <%= link_to 'Back', rooms_path, :class => "btn waves-effect waves-light red" %>
		<% end %>

	</div>
</div>



